<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.pos.iago.taskmanager">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNAL_SYSTEM_WINDOW" />

    <application
        android:allowBackup="true"
        android:excludeFromRecents="true"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/AppThemeTransparent">
        <activity android:name=".views.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activities.CreateTaskActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".views.activities.SplashScreenActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".views.activities.ViewTaskActivity"
            android:theme="@style/AppTheme"></activity>

        <service android:name=".services.ChatHeadService"></service>
    </application>

</manifest>