<resources>

    <!-- Base application theme. -->
    <style taskTitle="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item taskTitle="colorPrimary">@color/colorPrimary</item>
        <item taskTitle="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item taskTitle="colorAccent">@color/colorAccent</item>
    </style>

    <style taskTitle="Theme.Transparent" parent="android:Theme">
        <item taskTitle="android:windowIsTranslucent">true</item>
        <item taskTitle="android:windowBackground">@android:color/transparent</item>
        <item taskTitle="android:windowContentOverlay">@null</item>
        <item taskTitle="android:windowNoTitle">true</item>
        <item taskTitle="android:windowIsFloating">true</item>
        <item taskTitle="android:backgroundDimEnabled">false</item>
    </style>

    <style taskTitle="AppThemeTransparent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item taskTitle="android:windowBackground">@android:color/transparent</item>
        <item taskTitle="android:colorBackgroundCacheHint">@null</item>
    </style>


</resources>
